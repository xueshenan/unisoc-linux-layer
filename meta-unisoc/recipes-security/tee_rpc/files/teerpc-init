#!/bin/sh
DESC="teerpc"

do_start() {
	echo "Starting $DESC"
	/usr/bin/teerpc &
}

do_stop() {
	start-stop-daemon --stop --name teerpc --quiet
}

case "$1" in
  start)
	do_start
	;;
  stop)
	echo "Stopping $DESC"
	do_stop
	;;
  restart|force-reload)
	echo "Restarting $DESC"
	do_stop
	sleep 1
	do_start
	;;
  *)
	echo "Usage: $0 {start|stop|restart|force-reload}" >&2
	exit 1
	;;
esac

exit 0

